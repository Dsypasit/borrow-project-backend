// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProductItems {
  id    Int     @default(autoincrement()) @id
  serial_no String  @unique
  broken_status  Boolean @default(false)
  source Source @relation(fields: [source_id], references: [id])
  source_id Int
  lab Lab @relation(fields: [lab_id], references: [id])
  lab_id Int
  products Products @relation(fields: [products_id], references: [id])
  products_id Int
  transactions Transactions[]
}

model Lab {
  id Int @default(autoincrement()) @id
  name String @unique
  ProductItems ProductItems[]
}

model Source {
  id Int @default(autoincrement()) @id
  name String @unique
  ProductItems ProductItems[] 
}

model Products{
  id Int @default(autoincrement()) @id
  name String @unique
  frequency Int @default(0)
  total Int @default(0)
  available Int @default(0)
  ProductItems ProductItems[]
}

model Transactions {
  id Int @default(autoincrement()) @id
  productItems ProductItems @relation(fields: [productItems_id], references: [serial_no])
  productItems_id String
  status Boolean @default(false)
  start_date DateTime? @default(now())
  end_date DateTime?
  deadline DateTime
  location String
  user User @relation(fields: [user_id], references: [id])
  user_id Int
}

model User{
  id Int @default(autoincrement()) @id
  role String?
  email String
  username String?
  phone String
  transactions Transactions[]
}
